<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25dp"
            android:gravity="right"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"

            />
        <TextView
            android:id="@+id/current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="40dp"
            android:gravity="right"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
            <!-- 1번째 줄 -->
            <Button
                android:id="@+id/bs"
                android:text="←" android:textSize="20dp"
                android:layout_margin="1.5dp"
                android:layout_height="50dp"
                android:layout_width="70dp"/>
            <Button
                android:id="@+id/ce"
                android:text="CE" android:textSize="20dp"
                android:layout_margin="1.5dp"
                android:layout_height="50dp"
                android:layout_width="70dp"
                />
            <Button
                android:id="@+id/c"
                android:text="C"
                android:textSize="20dp"
                android:layout_margin="1.5dp"
                android:layout_height="50dp"
                android:layout_width="70dp"
                />
            <Button
                android:id="@+id/result"
                android:text="="
                android:textSize="20dp"
                android:layout_margin="1.5dp"
                android:layout_height="50dp"
                android:layout_width="70dp"
                />
            </LinearLayout>
            <!-- 2번째 줄 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
            <Button
                android:id="@+id/one"
                android:text="1"
                android:textSize="20dp"
                android:layout_margin="1.5dp"
                android:layout_height="50dp"
                android:layout_width="70dp"
                />
            <Button
                android:id="@+id/two"
                android:text="2"
                android:textSize="20dp"
                android:layout_margin="1.5dp"
                android:layout_height="50dp"
                android:layout_width="70dp"
                />
            <Button
                android:id="@+id/three"
                android:text="3"
                android:textSize="20dp"
                android:layout_margin="1.5dp"
                android:layout_height="50dp"
                android:layout_width="70dp"
                />
            <Button
                android:id="@+id/plus"
                android:text="+"
                android:textSize="20dp"
                android:layout_margin="1.5dp"
                android:layout_height="50dp"
                android:layout_width="70dp"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
            <Button
                android:id="@+id/four"
                android:text="4"
                android:textSize="20dp"
                android:layout_margin="1.5dp"
                android:layout_height="50dp"
                android:layout_width="70dp"
                />
            <Button
                android:id="@+id/five"
                android:text="5"
                android:textSize="20dp"
                android:layout_margin="1.5dp"
                android:layout_height="50dp"
                android:layout_width="70dp"
                />
            <Button
                android:id="@+id/six"
                android:text="6" android:textSize="20dp"
                android:layout_margin="1.5dp"
                android:layout_height="50dp"
                android:layout_width="70dp"
                />
            <Button
                android:id="@+id/minus"
                android:text="-" android:textSize="20dp"
                android:layout_margin="1.5dp"
                android:layout_height="50dp"
                android:layout_width="70dp"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
            <Button
                android:id="@+id/seven"
                android:text="7" android:textSize="20dp"
                android:layout_margin="1.5dp"
                android:layout_height="50dp"
                android:layout_width="70dp"
                />
            <Button
                android:id="@+id/eight"
                android:text="8" android:textSize="20dp"
                android:layout_margin="1.5dp"
                android:layout_height="50dp"
                android:layout_width="70dp"
                />
            <Button
                android:id="@+id/nine"
                android:text="9" android:textSize="20dp"
                android:layout_margin="1.5dp"
                android:layout_height="50dp"
                android:layout_width="70dp"
                />

            <Button
                android:id="@+id/dupli"
                android:layout_height="wrap_content"
                android:layout_margin="1.5dp"
                android:text="*"
                android:textSize="20dp"
                android:layout_width="70dp"
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
            <Button
                android:id="@+id/zero"
                android:text="0" android:textSize="20dp"
                android:layout_margin="1.5dp"
                android:layout_height="50dp"
                android:layout_width="70dp"
                />
            <Button

                android:text="" android:textSize="20dp"
                android:layout_margin="1.5dp"
                android:layout_height="50dp"
                android:layout_width="70dp"
                />
            <Button
                android:text="" android:textSize="20dp"
                android:layout_margin="1.5dp"
                android:layout_height="50dp"
                android:layout_width="70dp"
                />
            <Button
                android:id="@+id/division"
                android:text="/" android:textSize="20dp"
                android:layout_margin="1.5dp"
                android:layout_height="50dp"
                android:layout_width="70dp"
                />
            </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>